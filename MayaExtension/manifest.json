{
  "name": "Maya",
  "description": "Ai - powered assistant for replying Emails",
  "version": "1.0",
  "manifest_version": 3,
  "persmissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://localhost:8080/*",
    "*://mail.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["*://mail.google.com/*"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
    ],
    "web_accessible_resources": [
      {
        "resources": ["icons/*"],
        "matches": ["*://mail.google.com/*"]
      }
    ],
  "action": {
    "default_title": "Maya Personal Assistant"
  }
}